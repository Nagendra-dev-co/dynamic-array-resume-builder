# Use an official Node.js runtime as a parent image
FROM node:18

# Set the working directory
WORKDIR /app

# Install Firebase CLI globally
RUN npm install -g firebase-tools

# Copy package.json and package-lock.json for functions
COPY ./functions/package*.json ./functions/

# Install NPM dependencies for Firebase Functions
RUN cd ./functions && npm install

# Copy the rest of the Firebase functions code
COPY ./functions ./functions

# Authenticate with Google Cloud (Use environment variables for secrets)
ENV GOOGLE_APPLICATION_CREDENTIALS="/app/credentials.json"

# Expose default Firebase port (if needed)
EXPOSE 5001

# Default command to deploy Firebase Functions
CMD ["firebase", "deploy", "--only", "functions"]
